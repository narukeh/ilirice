#!/bin/sh
sed "s/&/${1:-_}/g ; \
s/=/${1:-_}/g ; \
s/+/${1:-_}/g ; \
s/</${1:-_}/g ; \
s/>/${1:-_}/g ; \
s/(/${1:-_}/g ; \
s/)/${1:-_}/g ; \
s/{/${1:-_}/g ; \
s/}/${1:-_}/g ; \
s/'/${1:-_}/g ; \
s/,/${1:-_}/g ; \
s/:/${1:-_}/g ; \
s/;/${1:-_}/g ; \
s/\`/${1:-_}/g ; \
s/\"/${1:-_}/g ; \
s/\./${1:-_}/g ; \
s/\//${1:-_}/g ; \
s/\!/${1:-_}/g ; \
s/\[/${1:-_}/g ; \
s/\]/${1:-_}/g"
